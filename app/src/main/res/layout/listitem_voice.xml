<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="60dp" android:layout_marginTop="10dp"
        android:layout_height="40dp" android:baselineAlignBottom="false" android:src="@drawable/play" />

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <SeekBar android:id="@+id/positionBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content" android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/voiceDurationTime"
            android:layout_width="wrap_content" android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:layout_height="wrap_content"
            android:text="00:00"/>
        <TextView android:id="@+id/Time"  android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-4:00"/>
        <TextView android:id="@+id/Date"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-4:00"/>
        <Button
            android:layout_weight="1" android:layout_marginBottom="5dp"
            android:gravity="center_vertical|end"    android:background="?android:attr/selectableItemBackground"
            android:layout_width="20dp"  android:drawableStart="@drawable/delete"
            android:layout_height="30dp" />

    </LinearLayout>

    </LinearLayout>
</LinearLayout>